<form action="/todos" method="post">
    <input type="hidden" name="_csrf" id="" value="<%= csrfToken %>">
    <div class="flex gap-3 py-4">
        <div class="flex-auto">
            <input type="text" name="title" placeholder="Todos Title" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm " required>
        </div>
        <div class="flex-auto">
            <input type="date" name="dueDate" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4" required>
        </div>
        <div class="flex-auto">
            <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium r-2 mb-2">Add</button>
        </div>
    </div>
</form>
<div>
	<%- include("todo.ejs", {title:"Overdue", data: overdue}) %>
	<%- include("todo.ejs", {title:"Due Today", data: dueToday}) %>
	<%- include("todo.ejs", {title:"Due Later", data: dueLater}) %>
    <%- include("todo.ejs", {title:"Completed Items", data: CompletedItems}) %>
</div>